---
type Level = "info" | "warning" | "error";

interface Props {
  level: Level;
}

const { level } = Astro.props;

const bgClass = (() => {
  switch (level) {
    case "info":
    default:
      return "bg-emerald-100";

    case "warning":
      return "bg-yellow-100";

    case "error":
      return "bg-red-100";
  }
})();

const iconClass = (() => {
  switch (level) {
    case "info":
    default:
      return "material-symbols--info";

    case "warning":
      return "material-symbols--warning";

    case "error":
      return "material-symbols--error";
  }
})();
---

<div class=`flex rounded-lg px-2 ${bgClass}`>
  <div class=`flex-none place-content-center mr-2 text-4xl`>
    <span class=`iconify ${iconClass}`></span>
  </div>
  <div class="flex-1">
    <slot />
  </div>
</div>
