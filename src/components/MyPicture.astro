---
import { Picture } from "astro:assets";
import placeholder from "@/content/images/placeholder.png";

export interface Props {
  className?: string;
  src?: ImageMetadata;
  alt?: string;
  loading?: "eager" | "lazy";
  fetchpriority?: "auto" | "low" | "high";
}

const src = Astro.props.src ?? placeholder;
const alt = Astro.props.alt ?? "";
const { loading, fetchpriority, className } = Astro.props;
---

<Picture
  class={className}
  formats={["avif"]}
  fallbackFormat="webp"
  src={src}
  alt={alt}
  widths={[240, 540, 720, src.width]}
  sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${src.width}px`}
  loading={loading}
  fetchpriority={fetchpriority}
/>
